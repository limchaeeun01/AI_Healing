<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때 또는 선택되었을 때 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F1F1F1"/> <!-- 회색 배경 -->
            <corners android:radius="50dp"/> <!-- 동일한 반지름 -->
            <stroke
                android:width="1dp"
                android:color="#BCBCBC"/> <!-- 동일한 테두리 색상 -->
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- 버튼이 선택되었을 때 회색 배경 유지 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#F1F1F1"/> <!-- 회색 배경 -->
            <corners android:radius="50dp"/>
            <stroke
                android:width="1dp"
                android:color="#BCBCBC"/>
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- 흰색 배경 -->
            <corners android:radius="50dp"/> <!-- 동일한 반지름 -->
            <stroke
                android:width="1dp"
                android:color="#BCBCBC"/> <!-- 회색 테두리 -->
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
